pragma solidity >= 0.5.0 < 0.9.0;
contract practice_6 {

    function average(int256 a, int256 b, int256 c) public pure returns(int256)
    {
        require( a > 0, "a should not be negative");    // using require (true, false)
        require( b > 0, "b should not be negative");
        require( c > 0, "c should not be negative");
        return ( a + b + c)/3;                          // finding Average of numbers
    }
}
